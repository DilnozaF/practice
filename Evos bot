async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    keyboard = [[KeyboardButton("üì± Telefon raqamingizni yuboring", request_contact=True)]]
    reply_markup = ReplyKeyboardMarkup(keyboard, one_time_keyboard=True, resize_keyboard=True)
    await update.message.reply_text("Xush kelibsiz!\nAvval telefon raqamingizni yuboring:", reply_markup=reply_markup)
    return PHONE


async def phone(update: Update, context: ContextTypes.DEFAULT_TYPE):
    user_phone = update.message.contact.phone_number
    await update.message.reply_text("‚úÖ Telefon raqamingiz qabul qilindi")

    keyboard = [
        [KeyboardButton("üçΩ Menyu")],
        [KeyboardButton("‚ÑπÔ∏è Biz Haqimizda")],
        [KeyboardButton("üõí Savat")],
        [KeyboardButton("üìû Aloqa")]
    ]
    reply_markup = ReplyKeyboardMarkup(keyboard, resize_keyboard=True)
    await update.message.reply_text("Asosiy Menyu:", reply_markup=reply_markup)
    return MAIN_MENU


